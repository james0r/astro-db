---
import Layout from '../layouts/Layout.astro';

import { db, Todo } from 'astro:db';

const todos = await db.select().from(Todo);
---

<Layout title="Welcome to Astro.">
	<main>
    <h1>
      Astro DB Playground
    </h1>
    <table>
      <thead>
        <tr>
          <th>id</th>
          <th>task</th>
          <th>completed</th>
        </tr>
      </thead>
      <tbody>
        {todos.map((todo) => (
          <tr>
            <td>{todo.id}</td>
            <td>{todo.task}</td>
            <td>{todo.completed ? '✅' : '❌'}</td>
          </tr>
        ))}
      </tbody>
    </table>
	</main>
</Layout>

<style>
	main {
    padding: 2rem;
    color: white;
  }
</style>
